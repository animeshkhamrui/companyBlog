<%- include('Common/header') %>
<%- include('Common/sidebar') %>
<div id="content" class="p-4 p-md-5 pt-5">
    <h2 class="mb-4">Update Slide</h2>
    <dir>
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/admin/edit-slide/content/<%= data._id %>" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="name">Name</label>
                      <input type="text" class="form-control" name="name" value="<%= data.name %>">
                    </div>
                    <div class="form-group">
                      <label for="content">Content</label>
                      <textarea class="form-control" name="content" rows="3"><%= data.content %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="s_image">Image</label>
                        <input type="file" class="form-control" name="s_image">
                      </div>
                    <button type="submit" class="btn btn-primary">Update Slide</button>
                  </form>
            </div>
          </div>
    </dir>
    </div>
<%- include('Common/footer') %>