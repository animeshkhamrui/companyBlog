<%- include('Common/header') %>
<%- include('Common/sidebar') %>
<div id="content" class="p-4 p-md-5 pt-5">
    <h2 class="mb-4">Update Blog</h2>
    <dir>
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/admin/edit-blog/content/<%= data._id %>" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Choose Category</label>
                        <select name="category" class="form-control">
                            <option disabled >Select Category</option>
                            <% for(let category of categorise){ %>
                                <option value="<%= category._id %>" <%= data.category.id===category.id ? "selected" : "" %>>
                                    <%= category.name %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                      <label for="name">Title</label>
                      <input type="text" class="form-control" name="title" value="<%= data.title %>">
                    </div>
                    <div class="form-group">
                      <label for="content">Content</label>
                      <textarea class="form-control" name="content" rows="3"><%= data.content %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="b_image">Image</label>
                        <input type="file" class="form-control" name="b_image">
                      </div>
                    <button type="submit" class="btn btn-primary">Update Blog</button>
                  </form>
            </div>
          </div>
    </dir>
    </div>
<%- include('Common/footer') %>