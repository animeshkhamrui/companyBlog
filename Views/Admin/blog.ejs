<%- include('Common/header') %>
<%- include('Common/sidebar') %>
<!-- Page Content  -->
<div id="content" class="p-4 p-md-5 pt-5">
  <% if(message.length>0) { %>
    <div class="alert alert-success text-center">
        <%= message %>
    </div>
    <% } %>
    <h2 class="mb-4">All Blog</h2>
    <div><a href="/admin/add-blog/page"><button class="btn btn-large btn-success">Add Blog</button></a></div>
    <div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Content</th>
                <th scope="col" class="text-center">Category</th>
                <th scope="col" class="text-center">Image</th>
                <th colspan="2" class="text-center">Action</th>
              </tr>
            </thead>
           <% if(allblog.length>0) { %>
            <% let i=0 %>
            <tbody>
                <% for(let x of allblog) { %>
                    <% i+=1 %>
              <tr>
                <th  class="text-center" scope="row"><%= i %></th>
                <td  class="text-center" ><%= x.title %></td>
                <td  class="text-center" ><%= x.content %></td>
                <td  class="text-center" ><%= x.category.name %></td>
                <td  class="text-center"><img src="./../../Upload/BlogImage/<%= x.image %>" height="50px" width="50px"/></td>
                <td  class="text-center"><a href="/admin/edit-blog/page/<%= x._id %>"><button class="btn btn-success">Edit</button></a></td>
                <td  class="text-center"><a href="/admin/delete-blog/<%= x._id %>"><button class="btn btn-danger">Delete</button></a></td>
              </tr>
              <% } %>
            </tbody>
            <% }else{ %>
                <div>No Blog Available...</div>
                <% } %>
          </table>
    </div>
    </div>
<%- include('Common/footer') %>